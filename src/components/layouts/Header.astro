---
import { SITE_NAME, SITE_DESCRIPTION } from "@/constants/data";
---

<header
  class="header flex flex-col items-center justify-center gap-2.5 px-5 pb-10 pt-12"
  id="header"
>
  <!-- Header title -->
  <h1
    class="scroll-m-20 text-center text-4xl font-extrabold tracking-tight text-balance"
  >
    {SITE_NAME}
  </h1>
  <!-- Header description -->
  <h2 class="scroll-m-20 text-center pt-2 text-xl tracking-tight first:mt-0">
    {SITE_DESCRIPTION}
  </h2>
</header>

<style>
  h1 {
    background: linear-gradient(90deg, #00dbde, #fc00ff);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
</style>
